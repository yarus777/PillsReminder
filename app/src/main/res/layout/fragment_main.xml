<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:fab="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/light_gray">

    <devs.mulham.horizontalcalendar.HorizontalCalendarView
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            fab:layout_constraintTop_toTopOf="parent"
            fab:textColorSelected="@color/yellow_green"
            fab:sizeBottomText="14sp"
            fab:sizeMiddleText="20sp"
            fab:selectorColor="@android:color/transparent"
            android:paddingTop="6dp"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/scheduleList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/schedule_item_view"
            tools:itemCount="5"
            tools:layoutManager="android.support.v7.widget.LinearLayoutManager"
            tools:orientation="vertical"
            android:overScrollMode="never"
            android:scrollbars="none"
            fab:layout_constraintTop_toBottomOf="@+id/calendar">

    </android.support.v7.widget.RecyclerView>

    <com.github.clans.fab.FloatingActionMenu
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            fab:menu_colorNormal="@color/yellow_green"
            fab:menu_colorPressed="@color/yellow_green"
            fab:layout_constraintEnd_toEndOf="parent"
            fab:layout_constraintBottom_toBottomOf="parent"
            fab:menu_labels_colorNormal="@android:color/transparent"
            fab:menu_labels_colorPressed="@android:color/transparent"
            fab:menu_labels_colorRipple="@android:color/transparent"
            fab:menu_labels_showShadow="false"
            fab:menu_backgroundColor="@color/shadow">

        <com.github.clans.fab.FloatingActionButton
                android:id="@+id/mainMenuAddMedicine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_prescription"
                fab:fab_size="mini"
                fab:fab_label="@string/add_medicine"
                fab:fab_colorNormal="@color/yellow_green"
                fab:fab_colorPressed="@color/yellow_green"/>

        <com.github.clans.fab.FloatingActionButton
                android:id="@+id/menu_add_measurement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_heartbeat"
                fab:fab_size="mini"
                fab:fab_label="@string/add_measurement"
                fab:fab_colorNormal="@color/yellow_green"
                fab:fab_colorPressed="@color/yellow_green"
        />
    </com.github.clans.fab.FloatingActionMenu>


</android.support.constraint.ConstraintLayout>